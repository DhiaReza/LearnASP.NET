@using Microsoft.AspNetCore.Components.Web
@{
    ViewData["Title"] = "Edit Book Data";
}
@model Bookstore_MVC.Models.Book

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/add.css" rel="stylesheer" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <div class="container w-90">
        <div class="pt-5">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="row">
            <div>
                <a href="/" class="btn btn-primary">Back</a>
            </div>
            <form asp-controller="book" asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group py-1">
                    <label asp-for="Author" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Author" class="form-control" placeholder="Enter book author" />
                        <!-- Displays validation error for Name -->
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group py-1">
                    <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                            <!-- Displays validation error for Name -->
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                </div>
                <div class="form-group py-1">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control" placeholder="Enter book price" />
                            <!-- Displays validation error for Name -->
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                </div>
                <!-- Submit Button -->
                <div class="form-group pt-2">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-success">Edit Book</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

