@using Microsoft.AspNetCore.Components.Web
@{
    ViewData["Title"] = "Add Book";
}
@model Bookstore_MVC.Models.AddBookDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/add.css" rel="stylesheer" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <div class="container w-90">
                <div>
                <a href="/" class="btn btn-primary">Back</a>
            </div>
        <div class="pt-3">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="row">

            <form asp-controller="Admin" asp-action="AddBook" enctype="multipart/form-data" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group py-1">
                    <label asp-for="Author" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Author" class="form-control" placeholder="Enter book author" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group py-1">
                    <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                </div> 
                <div class="form-group py-1">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control" placeholder="Enter book description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                </div>
                <div class="form-group py-1">
                    <label asp-for="Genres" class="col-sm-2 col-form-label"></label>
                    @foreach (var genre in Model.GenreNames)
                    {
                        <div>
                            <input type="checkbox" name="SelectedGenreIds" value="@genre.Id"/>
                            <label asp-for="SelectedGenreIds" class="col-sm-2 col-form-label text-capitalize">@genre.Name</label>
                        </div>
                    }
                    <span asp-validation-for="SelectedGenreIds" class="text-danger"></span>
                </div>
                <div class="form-group py-1">
                    <label asp-for="ISBN" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="ISBN" asp-for="ISBN" class="form-control" placeholder="Enter book ISBN" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                </div>
                <div class="form-group py-1">
                    <label asp-for="Stock" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="number" asp-for="Stock" class="form-control" placeholder="Enter book stock" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                </div>
                <div class="form-group py-1">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="number" step="0.01" asp-for="Price" class="form-control" placeholder="Enter book price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                </div>
                <div class="form-group py-1">
                    <label asp-for="ImageData" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                                        <input asp-for="ImageFile" type="file" class="form-control-file"
                   accept=".jpg,.jpeg,.png,.gif" />
                            <span asp-validation-for="ImageData" class="text-danger"></span>
                        </div>
                </div>
                <div class="form-group pt-2">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-success">Add Book</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>