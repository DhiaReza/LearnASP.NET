@model Bookstore_MVC.Models.Book

<div class="card shadow-sm">
    <div class="card-body">
        <div class="shadow-lg"> 
            @if (@Model.ImageData != null)
            {
                <img class="card-img-top rounded mx-auto fixed-size-image border border-2" 
                      src="@Url.Action("GetImage", "Book", new { id = Model.Id })" 
                      alt="@Model.Title" />
            }
            else
            {
                <img class="card-img-top rounded mx-auto fixed-size-image border border-2" 
                      src="/img/NOT-AVAILABLE.png" 
                      alt="Image not available" />
            }
        </div>
        <h5 class="text-capitalize fw-bold text-truncate mt-3">@Model.Title</h6>
        <h7 class="text-capitalize">by @Model.Author</h7>
        <p>$@Model.Price</p>
        <p>@Model.Stock in stock</p>
        @* @if (string.IsNullOrEmpty(Model.Description))
        {
            <div class="text-muted">
                <p>No Description Available</p>
            </div>
        }
        else
        {
            <div class="truncate-multiline">
                <p class="fs-6">@Model.Description</p>
            </div>
        } *@
      <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Id" class="stretched-link"></a>
    </div>
    <div class="card-footer" style="z-index:2;position:relative;">
        <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="position: relative;">Add to cart</a>
    </div>
</div>
